{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stdgames",
  "version": "0.1.0",
  "identifier": "com.stdgames.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "splashscreen",
        "url": "/splashscreen",
        "title": "STD Games",
        "minWidth": 400,
        "minHeight": 400,
        "width": 400,
        "height": 400,
        "transparent": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "visible": true,
        "maximizable": false,
        "minimizable": true
      },
      {
        "label": "main",
        "title": "STD Games",
        "visible": false,
        "minWidth": 600,
        "minHeight": 400,
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
